<odoo>
  <template id="rma_monthly_template">
    <t t-call="report.external_layout_standard">
      <div class="page">
        <h2>Reporte Mensual RMA + POS</h2>
        <p>Periodo: <strong><t t-esc="date_start"/> a <t t-esc="date_end"/></strong></p>
        <table class="table table-sm">
          <thead>
            <tr>
              <th>Fecha</th>
              <th>Total RMA</th>
              <th>Total POS</th>
              <th>Gran Total</th>
            </tr>
          </thead>
          <tbody>
            <t t-foreach="groups" t-as="grp">
              <tr>
                <td><t t-esc="grp['date']"/></td>
                <td><t t-esc="grp['rma_total']"/></td>
                <td><t t-esc="grp['pos_total']"/></td>
                <td><t t-esc="grp['pos_total'] + grp['rma_total']"/></td>
              </tr>
            </t>
          </tbody>
        </table>
      </div>
    </t>
  </template>
</odoo>