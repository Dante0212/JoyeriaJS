<odoo>
    <template id="report_sales_by_store_template">
        <t t-call="web.external_layout">
            <h2>Reporte de cobros a taller</h2>
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>RMA</th>
                        <th>Peso</th>
                        <th>Metales Extra</th>
                        <th>Metal Utilizado</th>
                        <th>Valor Metal</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="docs" t-as="rec">
                        <tr>
                            <td><t t-esc="rec.name"/></td>
                            <td><t t-esc="rec.peso_valor"/></td>
                            <td><t t-esc="rec.metales_extra"/></td>
                            <td><t t-esc="rec.metal_utilizado"/></td>
                            <td>
                                <t t-if="rec.metal_utilizado == 'oro 18k rosado'">
                                    <t t-esc="(rec.peso_valor + rec.metales_extra) * (data['precio_oro_rosado'] or 0.0)"/>
                                </t>
                                <t t-if="rec.metal_utilizado == 'oro 18k amarillo'">
                                    <t t-esc="(rec.peso_valor + rec.metales_extra) * (data['precio_oro_amarillo'] or 0.0)"/>
                                </t>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
    </template>
</odoo>
