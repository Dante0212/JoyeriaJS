<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="punto_de_venta.module_category_sales_point_of_sale" model="ir.module.category">
    <field name="name">Punto de Venta</field>
    <field name="description">Punto de venta personalizado.</field>
    <field name="sequence">21</field>
  </record>
  <record id="group_pos_user" model="res.groups">
    <field name="name">PoS User</field>
    <field name="category_id" ref="punto_de_venta.module_category_sales_point_of_sale"/>
  </record>
  <record id="group_pos_manager" model="res.groups">
    <field name="name">PoS Manager</field>
    <field name="category_id" ref="punto_de_venta.module_category_sales_point_of_sale"/>
    <field name="implied_ids" eval="[(4, ref('punto_de_venta.group_pos_user')), (4, ref('stock.group_stock_user'))]"/>
    <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
  </record>
  <data noupdate="1">
    <record id="rule_pos_bank_statement_account_user" model="ir.rule">
      <field name="name">PoS Bank Statement: Accountant</field>
      <field name="model_id" ref="account.model_account_bank_statement"/>
      <field name="groups" eval="[(4, ref('account.group_account_invoice'))]"/>
      <field name="domain_force">[(1, '=', 1)]</field>
    </record>
    <record id="rule_pos_bank_statement_line_user" model="ir.rule">
      <field name="name">PoS Bank Statement Line: PoS User</field>
      <field name="model_id" ref="account.model_account_bank_statement_line"/>
      <field name="groups" eval="[(4, ref('punto_de_venta.group_pos_user'))]"/>
      <field name="domain_force">[('pos_session_id','!=', False)]</field>

    </record>
    <record id="rule_pos_bank_statement_line_account_user" model="ir.rule">
      <field name="name">PoS Bank Statement Line: Accountant</field>
      <field name="model_id" ref="account.model_account_bank_statement_line"/>
      <field name="groups" eval="[(4, ref('account.group_account_invoice'))]"/>
      <field name="domain_force">[(1, '=', 1)]</field>
    </record>
    <record id="rule_pos_multi_company" model="ir.rule">
      <field name="name">PoS Order: multi-company</field>
      <field name="model_id" ref="model_pos_order"/>
      <field name="domain_force">[('company_id','in',company_ids)]</field>
    </record>
    <record id="rule_invoice_pos_user" model="ir.rule">
      <field name="name">Invoice PoS User</field>
      <field name="model_id" ref="account.model_account_move"/>
      <field name="groups" eval="[(4, ref('punto_de_venta.group_pos_user'))]"/>
      <field name="domain_force">[('pos_order_ids','!=', False)]</field>
    </record>
    <record id="base.default_user" model="res.users">
      <field name="groups_id" eval="[(4, ref('punto_de_venta.group_pos_manager'))]"/>
    </record>
  </data>
</odoo>