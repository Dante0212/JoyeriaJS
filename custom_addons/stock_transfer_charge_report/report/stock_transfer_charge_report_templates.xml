<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Hereda Delivery Slip de stock -->
  <template id="stock_transfer_charge_report_template" inherit_id="stock.report_deliveryslip">
    <xpath expr="//t[@t-call='stock.report_delivery_document']" position="after">
      <div class="page break-after mt32">
        <t t-foreach="docs" t-as="o">
          <h2 style="text-align:center;">
            Cargos entre Locales â€” <small><t t-esc="o.name"/></small>
          </h2>
          <table class="table table-sm mt16">
            <thead>
              <tr>
                <th>Secuencia</th>
                <th>Origen</th>
                <th>Destino</th>
                <th class="text-right">Total (CLP)</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><t t-esc="o.name"/></td>
                <td><t t-esc="o.location_id.display_name"/></td>
                <td><t t-esc="o.location_dest_id.display_name"/></td>
                <td class="text-right">
                  <t t-esc="
                    '%.2f' % sum(
                      m.product_uom_qty * (m.product_id.standard_price or 0.0)
                      for m in o.move_ids
                      if m.state == 'done' and m.product_uom_qty
                    )
                  "/>
                </td>
              </tr>
            </tbody>
          </table>
        </t>
      </div>
    </xpath>
  </template>
</odoo>
