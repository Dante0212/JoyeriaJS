<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Plantilla QWeb independiente para el reporte de Cargos entre Locales -->
  <template
      id="stock_transfer_charge_report_template"
      t-name="stock_transfer_charge_report.stock_transfer_charge_report_template">
    <!-- Usamos el layout de reportes de Odoo -->
    <t t-call="web.external_layout">
      <main class="page">
        <h2 style="text-align:center;">Cargos entre Locales (Agrupado Mensual)</h2>

        <!-- Si hay datos agrupados -->
        <t t-if="months">
          <t t-foreach="months" t-as="m">
            <div class="mt32">
              <h3>Mes: <t t-esc="m['month']"/></h3>
              <table class="table table-sm mt16">
                <thead>
                  <tr>
                    <th>Taller Origen</th>
                    <th>Taller Destino</th>
                    <th class="text-right">Total (CLP)</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td><t t-esc="m['origin']"/></td>
                    <td><t t-esc="m['dest']"/></td>
                    <td class="text-right"><t t-esc="'%.2f' % m['total']"/></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </t>
        </t>

        <!-- Si no hay datos -->
        <t t-if="not months">
          <p style="text-align:center;"><em>No se encontraron transferencias internas finalizadas.</em></p>
        </t>
      </main>
    </t>
  </template>
</odoo>
