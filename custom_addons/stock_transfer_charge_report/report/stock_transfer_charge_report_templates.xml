<odoo>
  <template id="stock_transfer_charge_report_template">
    <t t-call="web.external_layout">
      <main class="page">
        <h2>DEBUG - Reporte de Traspasos (todos los registros de stock.picking)</h2>
        <t t-if="lines">
          <table class="table table-sm">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Estado</th>
                <th>Tipo de Picking</th>
                <th>Origen</th>
                <th>Destino</th>
                <th>Fecha</th>
              </tr>
            </thead>
            <tbody>
              <t t-foreach="lines" t-as="line">
                <tr>
                  <td><t t-esc="line['name']"/></td>
                  <td><t t-esc="line['state']"/></td>
                  <td><t t-esc="line['picking_type_code']"/></td>
                  <td><t t-esc="line['origin']"/></td>
                  <td><t t-esc="line['destination']"/></td>
                  <td><t t-esc="line['date']"/></td>
                </tr>
              </t>
            </tbody>
          </table>
        </t>
        <t t-if="not lines">
          <p>No hay datos en stock.picking</p>
        </t>
      </main>
    </t>
  </template>
</odoo>
