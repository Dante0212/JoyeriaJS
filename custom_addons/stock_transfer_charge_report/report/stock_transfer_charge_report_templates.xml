<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Heredamos la plantilla de Delivery Slip -->
  <template id="stock_transfer_charge_report_template"
            inherit_id="stock.report_delivery_document">
    <!-- Insertar tras la pÃ¡gina original -->
    <xpath expr="//div[@class='page']" position="after">
      <div class="page break-after mt32">
        <h2 class="text-center">Cargos entre Talleres (Agrupado Mensual)</h2>
        <!-- Si hay datos, mostramos la tabla -->
        <t t-if="charge_lines">
          <table class="table table-sm mt16">
            <thead>
              <tr>
                <th>Mes</th>
                <th>Origen</th>
                <th>Destino</th>
                <th class="text-right">Total (CLP)</th>
              </tr>
            </thead>
            <tbody>
              <t t-foreach="charge_lines" t-as="c">
                <tr>
                  <td><t t-esc="c['month']"/></td>
                  <td><t t-esc="c['origin']"/></td>
                  <td><t t-esc="c['dest']"/></td>
                  <td class="text-right"><t t-esc="'%.2f' % c['amount']"/></td>
                </tr>
              </t>
            </tbody>
          </table>
        </t>
        <!-- Si no hay registros -->
        <t t-if="not charge_lines">
          <p class="text-center"><em>No hay cargos para mostrar.</em></p>
        </t>
      </div>
    </xpath>
  </template>
</odoo>
