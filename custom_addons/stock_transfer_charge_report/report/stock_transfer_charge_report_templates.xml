<odoo>
  <template id="stock_transfer_charge_report_template">
    <t t-call="web.html_container">
      <t t-foreach="traspasos_por_mes.items()" t-as="mes_traspasos">
        <div class="page">
          <h2 style="text-align:center;">Traspasos de <t t-esc="mes_traspasos[0]"/></h2>
          <t t-foreach="mes_traspasos[1]" t-as="mov">
            <h4>Traspaso: <t t-esc="mov['picking_name']"/></h4>
            <p><strong>Origen:</strong> <t t-esc="mov['origen']"/></p>
            <p><strong>Destino:</strong> <t t-esc="mov['destino']"/></p>
            <p><strong>Estado:</strong> <t t-esc="mov['estado']"/></p>
            <p><strong>Fecha:</strong> <t t-esc="mov['fecha']"/></p>
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Producto</th>
                  <th>Cantidad</th>
                  <th>UoM</th>
                  <th>Precio Interno (CLP)</th>
                  <th>Subtotal (CLP)</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><t t-esc="mov['name']"/></td>
                  <td><t t-esc="mov['qty']"/></td>
                  <td><t t-esc="mov['uom']"/></td>
                  <td><t t-esc="mov['precio_interno']"/></td>
                  <td><t t-esc="mov['subtotal_interno']"/></td>
                </tr>
              </tbody>
            </table>
            <hr style="margin:15px 0;"/>
          </t>
        </div>
      </t>
    </t>
  </template>
</odoo>
