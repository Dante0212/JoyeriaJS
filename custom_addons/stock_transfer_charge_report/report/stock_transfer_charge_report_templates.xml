<odoo>
  <template id="stock_transfer_charge_report_template">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="o">
        <t t-call="web.external_layout">
          <div class="page">
            <h2 style="text-align:center;">Traspaso: <t t-esc="o.name"/></h2>
            <!-- ... tus pÃ¡rrafos de origen/destino/etc ... -->

            <table class="table table-sm" t-if="o.move_line_ids_without_package">
              <thead>
                <tr>
                  <th>Producto</th>
                  <th>Cantidad</th>
                  <th>UoM</th>
                  <th>Precio Unitario</th>
                  <th>Interno (CLP)</th>
                  <th>Subtotal</th>
                  <th>Subtotal Int.</th>
                </tr>
              </thead>
              <tbody>
                <tr t-foreach="o.move_line_ids_without_package" t-as="ml">
                  <td><t t-esc="ml.product_id.display_name"/></td>
                  <td><t t-esc="ml.quantity"/></td>
                  <td><t t-esc="ml.product_uom_id.name"/></td>
                  <td><t t-esc="ml.product_id.standard_price or 0.0"/></td>
                  <!-- leemos data.precios_interno -->
                  <td>
                    <t t-esc="data.precios_interno.get(ml.product_id.id, 0.0)"/>
                  </td>
                  <td>
                    <t t-esc="ml.quantity * (ml.product_id.standard_price or 0.0)"/>
                  </td>
                  <td>
                    <t t-esc="ml.quantity * data.precios_interno.get(ml.product_id.id, 0.0)"/>
                  </td>
                </tr>
              </tbody>
              <tfoot>
                <tr>
                  <th colspan="6" style="text-align:right;">Total Interno (CLP):</th>
                  <th>
                    <!-- sumamos todos los subtotales internos -->
                    <t t-esc="
                      sum(ml.quantity * data.precios_interno.get(ml.product_id.id, 0.0)
                          for ml in o.move_line_ids_without_package)
                    "/>
                  </th>
                </tr>
              </tfoot>
            </table>

            <t t-if="not o.move_line_ids_without_package">
              <p>No hay movimientos de productos en este traspaso.</p>
            </t>
          </div>
        </t>
      </t>
    </t>
  </template>
</odoo>
