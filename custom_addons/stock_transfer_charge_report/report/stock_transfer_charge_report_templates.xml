<odoo>
  <data>
    <template id="stock_transfer_charge_report_template">
      <t t-call="web.external_layout">
        <!-- everything inside the “body” slot stays in your get_report_values context -->
        <t t-slot="body">
          <t t-foreach="docs" t-as="o">
            <div class="page">
              <h2 style="text-align:center;">Traspaso: <t t-esc="o['name']"/></h2>
              <p><strong>Origen:</strong> <t t-esc="o['location_id']"/></p>
              <p><strong>Destino:</strong> <t t-esc="o['location_dest_id']"/></p>
              <p><strong>Estado:</strong> <t t-esc="o['state']"/></p>
              <p><strong>Tipo:</strong> <t t-esc="o['picking_type_code']"/></p>
              
              <!-- Ahora sí o['total_peso'] existe -->
              <p><strong>Peso total trasladado (kg):</strong>
                <t t-esc="o['total_peso']"/>
              </p>

              <table class="table table-sm">
                <thead>
                  <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>UoM</th>
                    <th>Precio Unitario</th>
                    <th>Peso (kg)</th>
                    <th>Subtotal</th>
                  </tr>
                </thead>
                <tbody>
                  <tr t-foreach="o['lines']" t-as="ml">
                    <td><t t-esc="ml['producto']"/></td>
                    <td><t t-esc="ml['cantidad']"/></td>
                    <td><t t-esc="ml['uom']"/></td>
                    <td><t t-esc="ml['precio_unitario']"/></td>
                    <td><t t-esc="ml['peso']"/></td>
                    <td><t t-esc="ml['subtotal']"/></td>
                  </tr>
                </tbody>
              </table>

              <div style="margin-top:30px; text-align:right;">
                <p>Entregado por: ____________________</p>
                <p>Recibido por: ____________________</p>
                <p>Firma: ____________________________</p>
              </div>
            </div>
          </t>
        </t>
      </t>
    </template>
  </data>
</odoo>
