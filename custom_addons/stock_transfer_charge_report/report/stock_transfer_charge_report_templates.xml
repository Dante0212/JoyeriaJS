<odoo>
  <template id="stock_transfer_charge_report_template">
    <t t-call="web.external_layout">
      <main class="page">
        <h2 style="text-align:center;">Traspasos de Productos</h2>
        <t t-if="lines">
          <table class="table table-sm">
            <thead>
              <tr>
                <th>Picking</th>
                <th>Origen</th>
                <th>Destino</th>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Subtotal</th>
                <th>Estado</th>
                <th>Tipo</th>
              </tr>
            </thead>
            <tbody>
              <t t-foreach="lines" t-as="l">
                <tr>
                  <td><t t-esc="l['picking_name']"/></td>
                  <td><t t-esc="l['origin']"/></td>
                  <td><t t-esc="l['destination']"/></td>
                  <td><t t-esc="l['product']"/></td>
                  <td><t t-esc="l['quantity']"/></td>
                  <td><t t-esc="l['price_unit']"/></td>
                  <td><t t-esc="l['subtotal']"/></td>
                  <td><t t-esc="l['state']"/></td>
                  <td><t t-esc="l['type']"/></td>
                </tr>
              </t>
            </tbody>
          </table>
        </t>
        <t t-if="not lines">
          <p style="text-align:center; font-style:italic;">No hay traspasos de productos.</p>
        </t>
      </main>
    </t>
  </template>
</odoo>
