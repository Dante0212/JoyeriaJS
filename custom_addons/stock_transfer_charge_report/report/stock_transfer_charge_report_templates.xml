<odoo>
  <template id="stock_transfer_charge_report_template">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="o">
        <t t-call="web.external_layout">
          <div class="page">
            <h2 style="text-align:center;">Traspaso: <t t-esc="o.name"/></h2>
            <p><strong>Origen:</strong> <t t-esc="o.origen"/></p>
            <p><strong>Destino:</strong> <t t-esc="o.destino"/></p>
            <p><strong>Estado:</strong> <t t-esc="o.estado"/></p>
            <p><strong>Tipo:</strong> <t t-esc="o.tipo"/></p>

            <p style="margin-top:1em;">
              <strong>Peso total trasladado (kg):</strong>
              <t t-esc="o.total_peso"/>
            </p>
            <p>
              <strong>Valor total trasladado ($):</strong>
              <t t-esc="o.total_precio"/>
            </p>

            <table class="table table-sm" t-if="o.lines">
              <thead>
                <tr>
                  <th>Producto</th>
                  <th>Cantidad</th>
                  <th>UoM</th>
                  <th>Precio Unitario</th>
                  <th>Peso LÃ­nea (kg)</th>
                  <th>Subtotal</th>
                </tr>
              </thead>
              <tbody>
                <tr t-foreach="o.lines" t-as="l">
                  <td><t t-esc="l.producto"/></td>
                  <td><t t-esc="l.cantidad"/></td>
                  <td><t t-esc="l.uom"/></td>
                  <td><t t-esc="l.precio_unitario"/></td>
                  <td><t t-esc="l.peso_linea"/></td>
                  <td><t t-esc="l.subtotal"/></td>
                </tr>
              </tbody>
            </table>
            <t t-if="not o.lines">
              <p><em>No hay movimientos de productos en este traspaso.</em></p>
            </t>
          </div>
        </t>
      </t>
    </t>
  </template>
</odoo>
