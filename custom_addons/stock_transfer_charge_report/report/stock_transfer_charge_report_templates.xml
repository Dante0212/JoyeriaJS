<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="stock_transfer_charge_report_template">
    <t t-call="web.external_layout">
      <div class="page">
        <h2 style="text-align:center;">Reporte de Cargos entre Locales</h2>
        <t t-if="months">
          <t t-foreach="months" t-as="month_data">
            <h3><t t-esc="month_data['month']"/></h3>
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Fecha</th>
                  <th>Local Origen</th>
                  <th>Local Destino</th>
                  <th>Producto</th>
                  <th>Cantidad</th>
                  <th>Precio Unitario</th>
                  <th>Subtotal</th>
                </tr>
              </thead>
              <tbody>
                <t t-foreach="month_data['lines']" t-as="line">
                  <tr>
                    <td><t t-esc="line['fecha']"/></td>
                    <td><t t-esc="line['origen']"/></td>
                    <td><t t-esc="line['destino']"/></td>
                    <td><t t-esc="line['producto']"/></td>
                    <td><t t-esc="line['cantidad']"/></td>
                    <td><t t-esc="'%.2f' % line['precio']"/></td>
                    <td><t t-esc="'%.2f' % line['subtotal']"/></td>
                  </tr>
                </t>
              </tbody>
            </table>
          </t>
        </t>
        <t t-if="not months">
          <p style="text-align:center; font-style:italic;">No se encontraron traspasos realizados.</p>
        </t>
      </div>
    </t>
  </template>
</odoo>
