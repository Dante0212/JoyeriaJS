<odoo>
  <template id="stock_transfer_charge_report_template">
    <t t-call="web.html_container">
      <t t-call="web.external_layout">
        <div class="page">
          <h2 style="text-align:center;">Reporte Mensual de Traspasos Internos</h2>
          <p><strong>Peso Total Movido en el Mes:</strong> <t t-esc="peso_total_mes"/> kg</p>
          <table class="table table-sm">
            <thead>
              <tr>
                <th>Mes/AÃ±o</th>
                <th>Producto</th>
                <th>Origen</th>
                <th>Destino</th>
                <th>Cantidad</th>
                <th>Peso Total (kg)</th>
                <th>Precio Interno</th>
                <th>Subtotal</th>
              </tr>
            </thead>
            <tbody>
              <tr t-foreach="grouped_lines" t-as="line">
                <td><t t-esc="'%02d/%d' % (line['mes'], line['ano'])"/></td>
                <td><t t-esc="line['producto'].display_name if line['producto'] else ''"/></td>
                <td><t t-esc="line['origen']"/></td>
                <td><t t-esc="line['destino']"/></td>
                <td><t t-esc="line['cantidad']"/></td>
                <td><t t-esc="line['peso']"/></td>
                <td><t t-esc="line['precio_interno']"/></td>
                <td><t t-esc="line['subtotal']"/></td>
              </tr>
            </tbody>
          </table>
        </div>
      </t>
    </t>
  </template>
</odoo>
