<odoo>
  <template id="stock_transfer_charge">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="o">
        <t t-call="web.external_layout">
          <div class="page">
            <h2 style="text-align:center;">
              Traspaso: <t t-esc="o.name"/>
            </h2>
            <p><strong>Origen:</strong>      <t t-esc="o.origin"/></p>
            <p><strong>Destino:</strong>     <t t-esc="o.destination"/></p>
            <p><strong>Estado:</strong>      <t t-esc="o.state"/></p>
            <p><strong>Tipo:</strong>        <t t-esc="o.picking_type"/></p>

            <t t-if="not o.lines">
              <p>No hay movimientos de productos en este traspaso.</p>
            </t>

            <table class="table table-sm" t-if="o.lines">
              <thead>
                <tr>
                  <th>CÃ³digo</th>
                  <th>Producto</th>
                  <th>Cantidad</th>
                  <th>UoM</th>
                  <th>Precio Interno</th>
                  <th>Subtotal</th>
                </tr>
              </thead>
              <tbody>
                <tr t-foreach="o.lines" t-as="l">
                  <td><t t-esc="l.product_code"/></td>
                  <td><t t-esc="l.product_name"/></td>
                  <td><t t-esc="l.qty"/></td>
                  <td><t t-esc="l.uom"/></td>
                  <td><t t-esc="l.int_price"/></td>
                  <td><t t-esc="l.subtotal_int"/></td>
                </tr>
              </tbody>
              <tfoot>
                <tr>
                  <td colspan="5" style="text-align:right;">
                    <strong>Total Interno:</strong>
                  </td>
                  <td>
                    <strong><t t-esc="o.total_int"/></strong>
                  </td>
                </tr>
              </tfoot>
            </table>
          </div>
        </t>
      </t>
    </t>
  </template>
</odoo>
