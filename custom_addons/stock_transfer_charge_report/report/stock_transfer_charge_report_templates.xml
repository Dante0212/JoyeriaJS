<odoo>
  <template id="stock_transfer_charge_report_template">
    <t t-call="web.external_layout">
      <main class="page">
        <h1 style="text-align:center;">Reporte Mensual de Cargos entre Locales</h1>
        <t t-foreach="data_by_month.items()" t-as="group">
          <h2>Mes: <t t-esc="group[0]"/></h2>
          <table class="table table-condensed">
            <thead>
              <tr>
                <th>Fecha</th>
                <th>Origen</th>
                <th>Destino</th>
                <th>Producto</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              <t t-set="total_mes" t-value="0"/>
              <t t-foreach="group[1]" t-as="line">
                <tr>
                  <td><t t-esc="line['date']"/></td>
                  <td><t t-esc="line['origin']"/></td>
                  <td><t t-esc="line['destination']"/></td>
                  <td><t t-esc="line['product']"/></td>
                  <td><t t-esc="line['price']"/></td>
                  <td><t t-esc="line['quantity']"/></td>
                  <td><t t-esc="line['total']"/></td>
                </tr>
                <t t-set="total_mes" t-value="total_mes + line['total']"/>
              </t>
              <tr>
                <td colspan="6" style="text-align:right;"><strong>Total del Mes</strong></td>
                <td><strong><t t-esc="total_mes"/></strong></td>
              </tr>
            </tbody>
          </table>
          <br/>
        </t>
      </main>
    </t>
  </template>
</odoo>
