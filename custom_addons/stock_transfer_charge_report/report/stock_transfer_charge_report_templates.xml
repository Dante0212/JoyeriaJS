<odoo>
  <template id="stock_transfer_charge_report_template">
    <t t-call="web.html_container">
      <t t-call="web.external_layout">
        <div class="page">
          <h2 style="text-align:center;">Traspasos realizados</h2>
          <table class="table table-sm" t-if="movimientos">
            <thead>
              <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>UoM</th>
                <th>Desde</th>
                <th>A</th>
              </tr>
            </thead>
            <tbody>
              <tr t-foreach="movimientos" t-as="m">
                <td>
                  <t t-esc="m['code']"/> - <t t-esc="m['name']"/>
                </td>
                <td>
                  <t t-esc="m['qty']"/>
                </td>
                <td>
                  <t t-esc="m['uom']"/>
                </td>
                <td>
                  <t t-esc="m['origen']"/>
                </td>
                <td>
                  <t t-esc="m['destino']"/>
                </td>
              </tr>
            </tbody>
          </table>
          <t t-if="not movimientos">
            <p>No hay movimientos de productos en los traspasos seleccionados.</p>
          </t>
        </div>
      </t>
    </t>
  </template>
</odoo>
