<odoo>
  <template id="stock_transfer_charge_report_template">
    <t t-call="web.html_container">
      <t t-foreach="meses" t-as="mes">
        <t t-call="web.external_layout">
          <div class="page">
            <h2 style="text-align:center;">Traspasos - <t t-esc="mes['mes']"/></h2>
            <t t-foreach="mes['locales']" t-as="loc">
              <h3>Origen: <t t-esc="loc['origen']"/></h3>
              <table class="table table-sm">
                <thead>
                  <tr>
                    <th>Traspaso</th>
                    <th>Fecha efectiva</th>
                    <th>Destino</th>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>UoM</th>
                    <th>Precio Unitario</th>
                    <th>Subtotal</th>
                  </tr>
                </thead>
                <tbody>
                  <tr t-foreach="loc['lines']" t-as="l">
                    <td><t t-esc="l['picking']"/></td>
                    <td><t t-esc="l['fecha']"/></td>
                    <td><t t-esc="l['destino']"/></td>
                    <td><t t-esc="l['producto']"/></td>
                    <td><t t-esc="l['cantidad']"/></td>
                    <td><t t-esc="l['uom']"/></td>
                    <td><t t-esc="l['precio_unit']"/></td>
                    <td><t t-esc="l['subtotal']"/></td>
                  </tr>
                </tbody>
                <tfoot>
                  <tr>
                    <td colspan="7" style="text-align:right;"><strong>Total mes para este local:</strong></td>
                    <td><strong><t t-esc="loc['total']"/></strong></td>
                  </tr>
                </tfoot>
              </table>
              <br/>
            </t>
          </div>
        </t>
      </t>
    </t>
  </template>
</odoo>
