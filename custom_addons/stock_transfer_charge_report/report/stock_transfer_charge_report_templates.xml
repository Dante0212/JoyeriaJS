<odoo>
  <template id="stock_transfer_charge_report_template">
    <t t-call="web.html_container">
      <t t-call="web.external_layout">
        <div class="page">
          <h2 style="text-align:center;">Movimientos Internos con Precio “Interno (CLP)”</h2>
          <table class="table table-sm">
            <thead>
              <tr>
                <th>Código Producto</th>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>UoM</th>
                <th>Origen</th>
                <th>Destino</th>
                <th>Picking</th>
                <th>Fecha</th>
                <th>Estado</th>
                <th>Precio Interno</th>
                <th>Subtotal Interno</th>
              </tr>
            </thead>
            <tbody>
                <tr t-foreach="o.lines" t-as="l">
                  <td><t t-esc="l.producto"/></td>
                  <td><t t-esc="l.cantidad"/></td>
                  <td><t t-esc="l.uom"/></td>
                  <td><t t-esc="l.precio_unitario"/></td>
                  <td><t t-esc="l.peso_linea"/></td>
                  <td><t t-esc="l.subtotal"/></td>
                </tr>
              </tbody>
            </table>
            <t t-if="not o.lines">
              <p><em>No hay movimientos de productos en este traspaso.</em></p>
            </t>
          </div>
      </t>
    </t>
  </template>
</odoo>
