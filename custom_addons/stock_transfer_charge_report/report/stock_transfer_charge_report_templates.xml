<odoo>
  <data>
    <template id="stock_transfer_charge">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <t t-call="web.external_layout">
            <div class="page">
              <h2 style="text-align:center;">
                Traspaso: <t t-esc="o['name']"/>
              </h2>
              <p><strong>Origen:</strong>      <t t-esc="o['origin']"/></p>
              <p><strong>Destino:</strong>     <t t-esc="o['destination']"/></p>
              <p><strong>Estado:</strong>      <t t-esc="o['state']"/></p>
              <p><strong>Tipo:</strong>        <t t-esc="o['picking_type']"/></p>

              <p style="margin-top:1em;">
                <strong>Total est√°ndar ($):</strong>
                <t t-esc="o['total_std']"/>
              </p>
              <p>
                <strong>Total interno ($):</strong>
                <t t-esc="o['total_int']"/>
              </p>

              <table class="table table-sm" border="1" cellpadding="3"
                     t-if="o['lines']">
                <thead>
                  <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>UoM</th>
                    <th>Precio Std.</th>
                    <th>Interno (CLP)</th>
                    <th>Sub. Std.</th>
                    <th>Sub. Int.</th>
                  </tr>
                </thead>
                <tbody>
                  <tr t-foreach="o['lines']" t-as="l">
                    <td><t t-esc="l['producto']"/></td>
                    <td><t t-esc="l['cantidad']"/></td>
                    <td><t t-esc="l['uom']"/></td>
                    <td><t t-esc="l['price_unit']"/></td>
                    <td><t t-esc="l['price_int']"/></td>
                    <td><t t-esc="l['subtotal_std']"/></td>
                    <td><t t-esc="l['subtotal_int']"/></td>
                  </tr>
                </tbody>
              </table>
              <t t-if="not o['lines']">
                <p><em>No hay movimientos de productos en este traspaso.</em></p>
              </t>
            </div>
          </t>
        </t>
      </t>
    </template>
  </data>
</odoo>
