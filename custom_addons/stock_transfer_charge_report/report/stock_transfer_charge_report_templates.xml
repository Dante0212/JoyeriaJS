<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Hereda el wrapper de reportes de picking internos -->
  <template id="stock_transfer_charge_report_template"
            inherit_id="stock.report_deliveryslip">
    <!-- Inserta tu sección justo después de renderizar la Guía de Despacho -->
    <xpath expr="//t[@t-call='stock.report_delivery_document']" position="after">
      <div class="page break-after mt32">
        <h2 style="text-align:center;">Cargos entre Locales (Datos Básicos)</h2>
        <table class="table table-sm mt16">
          <thead>
            <tr>
              <th>Secuencia</th>
              <th>Origen</th>
              <th>Destino</th>
            </tr>
          </thead>
          <tbody>
            <!-- `o` está en el scope del t-foreach de docs -->
            <tr>
              <td><t t-esc="o.name"/></td>
              <td><t t-esc="o.location_id.display_name"/></td>
              <td><t t-esc="o.location_dest_id.display_name"/></td>
            </tr>
          </tbody>
        </table>
      </div>
    </xpath>
  </template>
</odoo>