<odoo>
  <template id="stock_transfer_charge_report_template">
    <t t-call="web.html_container">
      <t t-call="web.external_layout">
        <div class="page">
          <h2 style="text-align:center;">Resumen mensual de traspasos</h2>
          <t t-foreach="resumen_mensual" t-as="rm">
            <h3>Mes: <t t-esc="rm['mes']"/> | Local Origen: <t t-esc="rm['origen']"/></h3>
            <t t-foreach="rm['traspasos']" t-as="tras">
              <div style="margin-bottom:20px;">
                <h4>Traspaso: <t t-esc="tras['nombre']"/> | Destino: <t t-esc="tras['destino']"/></h4>
                <p><strong>Realizado por:</strong> <t t-esc="tras['usuario']"/> | <strong>Fecha:</strong> <t t-esc="tras['fecha']"/></p>
                <table class="table table-sm" style="font-size:12px;">
                  <thead>
                    <tr>
                      <th>Producto</th>
                      <th>Cantidad</th>
                      <th>UoM</th>
                      <th>Precio Interno</th>
                      <th>Peso</th>
                      <th>Subtotal</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr t-foreach="tras['productos']" t-as="prod">
                      <td><t t-esc="prod['producto']"/></td>
                      <td><t t-esc="prod['cantidad']"/></td>
                      <td><t t-esc="prod['uom']"/></td>
                      <td><t t-esc="prod['precio_interno']"/></td>
                      <td><t t-esc="prod['peso']"/></td>
                      <td><t t-esc="prod['linea_total']"/></td>
                    </tr>
                  </tbody>
                </table>
                <p style="text-align:right;"><strong>Subtotal Traspaso:</strong> <t t-esc="tras['subtotal']"/> CLP</p>
                <p style="text-align:right; color:#1976d2;">
                  <strong>
                    El local "<t t-esc="tras['destino']"/>" le debe <t t-esc="tras['subtotal']"/> CLP a "<t t-esc="rm['origen']"/>" por este traspaso.
                  </strong>
                </p>
              </div>
            </t>
            <p style="font-size:14px; text-align:right; color:#388e3c; border-top:1px solid #aaa;">
              <strong>Total a cobrar por "<t t-esc="rm['origen']"/>":</strong>
              <t t-esc="rm['total']"/> CLP en <t t-esc="rm['mes']"/>.
            </p>
            <hr style="margin:20px 0;"/>
          </t>
          <t t-if="not resumen_mensual">
            <p>No hay traspasos efectivos en el mes seleccionado.</p>
          </t>
        </div>
      </t>
    </t>
  </template>
</odoo>
