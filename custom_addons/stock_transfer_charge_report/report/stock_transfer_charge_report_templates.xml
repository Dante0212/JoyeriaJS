<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="stock_transfer_charge_report_template">
    <t t-call="web.external_layout">
      <main class="page">
        <h2 style="text-align:center;">Reporte General de Traspasos entre Locales</h2>
        <t t-if="transfers">
          <table class="table table-sm">
            <thead>
              <tr>
                <th>Fecha</th>
                <th>Estado</th>
                <th>Local Origen</th>
                <th>Local Destino</th>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Subtotal</th>
              </tr>
            </thead>
            <tbody>
              <t t-foreach="transfers" t-as="line">
                <tr>
                  <td><t t-esc="line['date'] and line['date'].strftime('%d/%m/%Y %H:%M') or ''"/></td>
                  <td><t t-esc="line['state']"/></td>
                  <td><t t-esc="line['origin']"/></td>
                  <td><t t-esc="line['destination']"/></td>
                  <td><t t-esc="line['product']"/></td>
                  <td><t t-esc="line['quantity']"/></td>
                  <td><t t-esc="line['price_unit']"/></td>
                  <td><t t-esc="line['subtotal']"/></td>
                </tr>
              </t>
            </tbody>
          </table>
        </t>
        <t t-if="not transfers">
          <p style="text-align:center; font-style:italic;">No se encontraron traspasos internos.</p>
        </t>
      </main>
    </t>
  </template>
</odoo>
