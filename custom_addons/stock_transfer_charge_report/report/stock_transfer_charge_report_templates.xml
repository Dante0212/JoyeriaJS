<odoo>
  <template id="stock_transfer_charge_report_template">
    <t t-call="web.external_layout">
      <main class="page">
        <h1 style="text-align:center;">Cargos Entre Locales (Mensual)</h1>
        <table class="table table-condensed">
          <thead>
            <tr>
              <th>Mes</th>
              <th>Local Origen</th>
              <th>Local Destino</th>
              <th>Producto</th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
            <t t-foreach="lines" t-as="l">
              <tr>
                <td><t t-esc="l['month_name']"/></td>
                <td><t t-esc="l['origin']"/></td>
                <td><t t-esc="l['destination']"/></td>
                <td><t t-esc="l['product']"/></td>
                <td><t t-esc="l['total']"/></td>
              </tr>
            </t>
          </tbody>
        </table>
      </main>
    </t>
  </template>
</odoo>
