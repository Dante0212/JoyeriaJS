<odoo>
  <template id="stock_transfer_charge_report_template">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="o">
        <t t-call="web.external_layout">
          <div class="page">
            <h2 style="text-align:center;">Traspaso: <t t-esc="o['name']"/></h2>
            <p><strong>Origen:</strong>  <t t-esc="o['location']"/></p>
            <p><strong>Destino:</strong> <t t-esc="o['location_dest']"/></p>
            <p><strong>Estado:</strong>  <t t-esc="o['state']"/></p>
            <p><strong>Tipo:</strong>    <t t-esc="o['type']"/></p>

            <table class="table table-sm" border="1" cellspacing="0" cellpadding="4">
              <thead>
                <tr>
                  <th>Producto</th>
                  <th>Cantidad</th>
                  <th>UoM</th>
                  <th>Precio Unit.</th>
                  <th>Interno (CLP)</th>
                  <th>Subtotal U.</th>
                  <th>Subtotal Int.</th>
                </tr>
              </thead>
              <tbody>
                <tr t-foreach="o['lines']" t-as="l">
                  <td><t t-esc="l['producto']"/></td>
                  <td><t t-esc="l['cantidad']"/></td>
                  <td><t t-esc="l['uom']"/></td>
                  <td><t t-esc="l['price_unit']"/></td>
                  <td><t t-esc="l['price_int']"/></td>
                  <td><t t-esc="l['subtotal_unit']"/></td>
                  <td><t t-esc="l['subtotal_int']"/></td>
                </tr>
              </tbody>
              <tfoot>
                <tr>
                  <th colspan="5" style="text-align:right;">Totales:</th>
                  <th><t t-esc="o['total_unit']"/></th>
                  <th><t t-esc="o['total_int']"/></th>
                </tr>
              </tfoot>
            </table>

          </div>
        </t>
      </t>
    </t>
  </template>
</odoo>
