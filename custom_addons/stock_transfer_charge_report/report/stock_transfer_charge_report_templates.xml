<odoo>
  <data>
    <template id="stock_transfer_charge">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <t t-call="web.external_layout">
            <div class="page">
              <h2>Traspaso: <t t-esc="o['name']"/></h2>
              <p><strong>Origen:</strong>      <t t-esc="o['origin']"/></p>
              <p><strong>Destino:</strong>     <t t-esc="o['destination']"/></p>
              …
              <table t-if="o['lines']">
                <thead>…</thead>
                <tbody>
                  <tr t-foreach="o['lines']" t-as="l">
                    <td><t t-esc="l['producto']"/></td>
                    …
                  </tr>
                </tbody>
              </table>
            </div>
          </t>
        </t>
      </t>
    </template>
  </data>
</odoo>
