<odoo>
  <template id="stock_transfer_charge_report_template">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="o">
        <t t-call="web.external_layout">
          <div class="page">
            <h2 style="text-align:center;">
              Traspaso: <t t-esc="o['name']"/>
            </h2>
            <p><strong>Origen:</strong> <t t-esc="o['location_id']"/></p>
            <p><strong>Destino:</strong> <t t-esc="o['location_dest_id']"/></p>
            <p><strong>Estado:</strong> <t t-esc="o['state']"/></p>
            <p><strong>Tipo:</strong> <t t-esc="o['picking_type_code']"/></p>

            <p style="margin-top:1em;">
              <strong>Peso total trasladado (kg):</strong>
              <t t-esc="o['total_peso']"/>
            </p>
            <p>
              <strong>Valor total trasladado ($):</strong>
              <t t-esc="o['total_precio']"/>
            </p>

            <table class="table table-sm" t-if="o['lines']">
              <thead>
                <tr>
                  <th>Producto</th>
                  <th>Cantidad</th>
                  <th>UoM</th>
                  <th>Precio Unitario</th>
                  <th>Peso trasladado</th>
                  <th>Subtotal</th>
                </tr>
              </thead>
              <tbody>
                <tr t-foreach="o['lines']" t-as="ml">
                  <td><t t-esc="ml['producto']"/></td>
                  <td><t t-esc="ml['cantidad']"/></td>
                  <td><t t-esc="ml['uom']"/></td>
                  <td><t t-esc="ml['precio_unitario']"/></td>
                  <td><t t-esc="ml['peso']"/></td>
                  <td><t t-esc="ml['subtotal']"/></td>
                </tr>
              </tbody>
            </table>
            <t t-if="not o['lines']">
              <p>No hay movimientos de productos en este traspaso.</p>
            </t>
          </div>
        </t>
      </t>
    </t>
  </template>
</odoo>
