<odoo>
  <data>
    <template id="transfer_charge_report_template">
      <t t-call="web.external_layout">
        <main class="page">
          <h2 style="text-align:center;">Cargos entre Locales</h2>
          <table class="table table-condensed">
            <thead>
              <tr>
                <th>Origen</th>
                <th>Destino</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              <t t-foreach="lines" t-as="l">
                <tr>
                  <td><t t-esc="l.origin"/></td>
                  <td><t t-esc="l.destination"/></td>
                  <td><t t-esc="l.total"/></td>
                </tr>
              </t>
            </tbody>
          </table>
        </main>
      </t>
    </template>
  </data>
</odoo>
