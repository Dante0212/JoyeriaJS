<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Heredamos la plantilla original de la Guía de Despacho -->
  <template id="stock_transfer_charge_report_template"
            inherit_id="stock.report_delivery_document">
    <!-- Después de la sección principal, añadimos una nueva página -->
    <xpath expr="//div[@class='page']" position="after">
      <div class="page break-after mt32">
        <h2 style="text-align:center;">Cargos entre Locales (Datos Básicos)</h2>
        <!-- Recorremos los pickings pasados al reporte -->
        <t t-foreach="docs" t-as="o">
          <table class="table table-sm mt16">
            <thead>
              <tr>
                <th>Secuencia</th>
                <th>Origen</th>
                <th>Destino</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><t t-esc="o.name"/></td>
                <td><t t-esc="o.location_id.display_name"/></td>
                <td><t t-esc="o.location_dest_id.display_name"/></td>
              </tr>
            </tbody>
          </table>
        </t>
      </div>
    </xpath>
  </template>
</odoo>
