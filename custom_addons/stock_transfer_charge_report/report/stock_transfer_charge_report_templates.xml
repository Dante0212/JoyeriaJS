<odoo>
  <template id="stock_transfer_charge_report_template">
    <t t-call="web.html_container">
      <!-- Agrupa por mes y local de origen -->
      <t t-foreach="resumen" t-as="grupo">
        <t t-call="web.external_layout">
          <div class="page">
            <h2 style="text-align:center;">
              Traspasos - <t t-esc="grupo['origen']"/> | <t t-esc="grupo['mes']"/>
            </h2>
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Producto</th>
                  <th>Cantidad</th>
                  <th>UoM</th>
                  <th>Precio Unitario</th>
                  <th>Subtotal</th>
                  <th>Destino</th>
                  <th>Fecha efectiva</th>
                </tr>
              </thead>
              <tbody>
                <tr t-foreach="grupo['detalles']" t-as="line">
                  <td><t t-esc="line['producto']"/></td>
                  <td><t t-esc="line['cantidad']"/></td>
                  <td><t t-esc="line['uom']"/></td>
                  <td><t t-esc="line['precio_unitario']"/></td>
                  <td><t t-esc="line['subtotal']"/></td>
                  <td><t t-esc="line['destino']"/></td>
                  <td><t t-esc="line['fecha']"/></td>
                </tr>
              </tbody>
            </table>
            <h4 style="text-align:right;">
              Total mes <t t-esc="grupo['mes']"/> (<t t-esc="grupo['origen']"/>): <t t-esc="grupo['total']"/>
            </h4>
          </div>
        </t>
      </t>
      <t t-if="not resumen">
        <div class="page"><h3>No hay traspasos para mostrar.</h3></div>
      </t>
    </t>
  </template>
</odoo>
