
<odoo>
  <template id="stock_transfer_charge_report_template">
    <t t-call="web.external_layout">
      <main class="page">
        <h2 style="text-align:center;">Reporte de Cargos entre Locales</h2>
        <t t-if="data_by_month">
          <t t-set="months" t-value="sorted(data_by_month.items())"/>
          <t t-foreach="months" t-as="month_data">
            <h3>Mes: <t t-esc="month_data[0]"/></h3>
            <table class="table table-condensed" style="width:100%; margin-bottom: 40px;">
              <thead>
                <tr>
                  <th>Origen</th>
                  <th>Destino</th>
                  <th>Producto</th>
                  <th>Cantidad</th>
                  <th>Precio</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>
                <t t-foreach="month_data[1]" t-as="line">
                  <tr>
                    <td><t t-esc="line['origin']"/></td>
                    <td><t t-esc="line['destination']"/></td>
                    <td><t t-esc="line['product']"/></td>
                    <td><t t-esc="line['quantity']"/></td>
                    <td><t t-esc="line['price']"/></td>
                    <td><t t-esc="line['total']"/></td>
                  </tr>
                </t>
              </tbody>
            </table>
          </t>
        </t>
        <t t-if="not data_by_month">
          <p>No se encontraron traspasos realizados.</p>
        </t>
      </main>
    </t>
  </template>
</odoo>
