<odoo>
  <template id="stock_transfer_charge_report_template">
    <t t-call="web.html_container">
      <t t-call="web.external_layout">
        <div class="page">
          <h2 style="text-align:center;">Traspasos</h2>
          <table class="table table-sm" t-if="movimientos">
            <thead>
              <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>UoM</th>
                <th>Precio Interno</th>
                <th>Subtotal</th>
                <th>Origen</th>
                <th>Destino</th>
                <th>Traspaso</th>
                <th>Fecha</th>
                <th>Estado</th>
              </tr>
            </thead>
            <tbody>
              <tr t-foreach="movimientos" t-as="m">
                <td><t t-esc="m['producto']"/></td>
                <td><t t-esc="m['cantidad']"/></td>
                <td><t t-esc="m['uom']"/></td>
                <td><t t-esc="m['precio_interno']"/></td>
                <td><t t-esc="m['subtotal']"/></td>
                <td><t t-esc="m['origen']"/></td>
                <td><t t-esc="m['destino']"/></td>
                <td><t t-esc="m['traspaso']"/></td>
                <td><t t-esc="m['fecha']"/></td>
                <td><t t-esc="m['estado']"/></td>
              </tr>
            </tbody>
          </table>
          <t t-if="not movimientos">
            <p>No hay traspasos realizados.</p>
          </t>
        </div>
      </t>
    </t>
  </template>
</odoo>
