<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="stock_transfer_charge_report_template"
            t-name="stock_transfer_charge_report.stock_transfer_charge_report_template">
    <t t-call="web.external_layout">
      <main class="page">
        <h2 style="text-align: center;">Resumen de Traspasos Internos</h2>

        <!-- Siempre mostramos la tabla de lines -->
        <table class="table table-sm mt16" t-if="lines">
          <thead>
            <tr>
              <th>Secuencia</th>
              <th>Origen</th>
              <th>Destino</th>
            </tr>
          </thead>
          <tbody>
            <t t-foreach="lines" t-as="l">
              <tr>
                <td><t t-esc="l['sequence']"/></td>
                <td><t t-esc="l['origin']"/></td>
                <td><t t-esc="l['destination']"/></td>
              </tr>
            </t>
          </tbody>
        </table>

        <!-- Mensaje si no hubiera lines (no deberÃ­a pasar) -->
        <t t-if="not lines">
          <p class="text-center"><em>No hay registros para mostrar.</em></p>
        </t>
      </main>
    </t>
  </template>
</odoo>
