<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Hereda el Delivery Slip de stock -->
  <template id="stock_transfer_charge_report_template"
            inherit_id="stock.report_deliveryslip">
    <!-- Insertamos la sección de Cargos tras la Guía de Despacho -->
    <xpath expr="//t[@t-call='stock.report_delivery_document']" position="after">
      <div class="page break-after mt32">
        <h2 class="text-center">Cargos entre Locales (Agrupado Mensual)</h2>
        <!-- Recorremos charge_lines -->
        <t t-if="charge_lines">
          <t t-foreach="charge_lines" t-as="c">
            <div class="mt24">
              <h3>Mes: <t t-esc="c['month']"/></h3>
              <table class="table table-sm mt16">
                <thead>
                  <tr>
                    <th>Origen</th>
                    <th>Destino</th>
                    <th class="text-right">Total (CLP)</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td><t t-esc="c['origin']"/></td>
                    <td><t t-esc="c['dest']"/></td>
                    <td class="text-right"><t t-esc="'%.2f' % c['amount']"/></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </t>
        </t>
        <!-- Si no hay datos -->
        <t t-if="not charge_lines">
          <p class="text-center"><em>No se encontraron transferencias internas.</em></p>
        </t>
      </div>
    </xpath>
  </template>
</odoo>
