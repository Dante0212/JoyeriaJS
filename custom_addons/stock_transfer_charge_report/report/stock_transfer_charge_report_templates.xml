<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <!-- QWeb template independiente -->
  <template id="stock_transfer_charge_report_template">
            <t-name="stock_transfer_charge_report.report_stock_transfer_charge">
    <t t-call="web.html_container">
      <t t-call="web.external_layout">
        <div class="page">
          <h2 class="text-center">Cargos entre Locales (Agrupado Mensual)</h2>
          <t t-if="charge_lines">
            <table class="table table-sm mt16">
              <thead>
                <tr>
                  <th>Mes</th>
                  <th>Origen</th>
                  <th>Destino</th>
                  <th class="text-right">Total (CLP)</th>
                </tr>
              </thead>
              <tbody>
                <t t-foreach="charge_lines" t-as="c">
                  <tr>
                    <td><t t-esc="c.month"/></td>
                    <td><t t-esc="c.origin"/></td>
                    <td><t t-esc="c.dest"/></td>
                    <td class="text-right">
                      <t t-esc="'%.2f' % c.amount"/>
                    </td>
                  </tr>
                </t>
              </tbody>
            </table>
          </t>
          <t t-if="not charge_lines">
            <p class="text-center"><em>No se encontraron transferencias internas.</em></p>
          </t>
        </div>
      </t>
    </t>
  </template>
