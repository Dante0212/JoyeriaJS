<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Categoría de Punto de Venta -->
  <record id="base.module_category_sales_point_of_sale" model="ir.module.category">
    <field name="description">Punto de venta personalizado.</field>
    <field name="sequence">21</field>
  </record>

  <!-- Grupos PoS -->
  <record id="group_pos_user" model="res.groups">
    <field name="name">PoS User</field>
    <field name="category_id" ref="base.module_category_sales_point_of_sale"/>
  </record>
  <record id="group_pos_manager" model="res.groups">
    <field name="name">PoS Manager</field>
    <field name="category_id" ref="base.module_category_sales_point_of_sale"/>
    <field name="implied_ids" eval="[
      (4, ref('pos_custom.group_pos_user')),
      (4, ref('stock.group_stock_user'))
    ]"/>
    <field name="users" eval="[
      (4, ref('base.user_root')),
      (4, ref('base.user_admin'))
    ]"/>
  </record>

  <data noupdate="1">
    <!-- 1) El contador ve todos los extractos bancarios -->
    <record id="rule_pos_bank_statement_account_user" model="ir.rule">
      <field name="name">PoS Bank Statement: Accountant</field>
      <field name="model_id" ref="account.model_account_bank_statement"/>
      <field name="groups" eval="[(4, ref('account.group_account_invoice'))]"/>
      <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <!-- 2) PoS User ve sólo las líneas de extractos CON sesión PoS -->
    <record id="rule_pos_bank_statement_line_user" model="ir.rule">
      <field name="name">PoS Bank Statement Line: PoS User</field>
      <field name="model_id" ref="account.model_account_bank_statement_line"/>
      <field name="groups" eval="[(4, ref('pos_custom.group_pos_user'))]"/>
      <!-- referencia al campo en la clase account.bank.statement -->
      <field name="domain_force">[('statement_id.pos_session_id','!=', False)]</field>
    </record>

    <!-- 3) El contador PoS ve todas las líneas -->
    <record id="rule_pos_bank_statement_line_account_user" model="ir.rule">
      <field name="name">PoS Bank Statement Line: Accountant</field>
      <field name="model_id" ref="account.model_account_bank_statement_line"/>
      <field name="groups" eval="[(4, ref('account.group_account_invoice'))]"/>
      <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <!-- ... el resto de tus reglas multi-company, facturas, etc. ... -->

    <!-- Asignar al admin root al grupo PoS Manager -->
    <record id="base.default_user" model="res.users">
      <field name="groups_id" eval="[(4, ref('pos_custom.group_pos_manager'))]"/>
    </record>
  </data>
</odoo>
