<odoo>
  <data>
    <record id="view_reparacion_form_confirm" model="ir.ui.view">
      <field name="name">joyeria.reparacion.form.confirm</field>
      <field name="model">joyeria.reparacion</field>
      <field name="inherit_id" ref="joyeria_reparaciones.view_joyeria_reparacion_form"/>
      <field name="arch" type="xml">
        <!-- 1) Lo inyectamos dentro de o_cp_left -->
        <xpath expr="//div[contains(@class,'o_cp_left')]" position="inside">
          <button
            name="create"
            type="object"
            class="btn btn-primary o_form_button_save"
            string="Guardar"
            confirm="¿Deseas crear o guardar esta orden de reparación?"
            style="margin-left:8px;"  <!-- ajusta este valor a tu gusto -->
          />
        </xpath>
        <!-- 2) Eliminamos el que quedaba flotando a la derecha -->
        <xpath expr="//div[contains(@class,'o_cp_right')]/button[@name='create']"
               position="replace"/>
      </field>
    </record>
  </data>
</odoo>
