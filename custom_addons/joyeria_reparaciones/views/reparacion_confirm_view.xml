
<odoo>
  <data>
    <record id="view_reparacion_form_confirm" model="ir.ui.view">
      <field name="name">joyeria.reparacion.form.confirm</field>
      <field name="model">joyeria.reparacion</field>
      <field name="inherit_id" ref="view_joyeria_reparacion_form"/>  <!-- tu XML ID aquí -->
      <field name="arch" type="xml">
        <!-- Localizamos el botón “Guardar” por su clase CSS -->
        <xpath expr="//button[contains(@class,'o_form_button_save')]" position="attributes">
          <attribute name="confirm">
            ¿Deseas crear esta orden de reparación?
          </attribute>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
