<odoo>
    <record id="view_reporte_salida_taller_form" model="ir.ui.view">
        <field name="name">joyeria.salida_taller.form</field>
        <field name="model">joyeria.salida_taller</field>
        <field name="arch" type="xml">
            <form string="Reporte Salida Taller Mensual">
                <group>
                    <field name="mes"/>
                </group>
                <footer>
                    <button name="imprimir_pdf" type="object" string="Imprimir PDF" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_reporte_salida_taller" model="ir.actions.act_window">
        <field name="name">Reporte Salida Taller</field>
        <field name="res_model">joyeria.salida_taller</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_reporte_salida_taller_root" name="Reportes Taller"/>
    <menuitem id="menu_reporte_salida_taller" name="Salida Taller Mensual" parent="menu_reporte_salida_taller_root" action="action_reporte_salida_taller"/>
</odoo>