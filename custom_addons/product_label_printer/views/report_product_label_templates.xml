<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Acción para imprimir etiquetas 2×2 cm -->
    <record id="action_report_product_label_2x2" model="ir.actions.report">
      <field name="name">Etiquetas 2×2 cm</field>
      <field name="model">product.template</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">product_label_printer.report_product_label_2x2</field>
      <field name="report_file">product_label_printer.report_product_label_2x2</field>
      <field name="binding_model_id" ref="product.model_product_template"/>
      <field name="binding_type">report</field>
    </record>

    <!-- Plantilla QWeb para etiquetas 2×2 cm -->
    <template id="report_product_label_2x2">
      <t t-call="web.html_container">
        <div class="page_container">
          <t t-foreach="docs" t-as="template">
            <div style="width:2cm; height:2cm; display:inline-block; margin:1mm; border:1px solid #000; text-align:center; padding:0.1cm; page-break-inside:avoid;">
              <t t-if="template.product_variant_ids">
                <t t-foreach="template.product_variant_ids[:1]" t-as="var">
                  <span t-field="var.barcode" t-field-options="{'widget':'barcode','barcode_type':'Code128','width':300,'height':150}"/>
                  <div style="font-size:6px; line-height:1em; margin-top:2px;">
                    <t t-esc="var.barcode"/>
                  </div>
                </t>
              </t>
            </div>
          </t>
        </div>
      </t>
    </template>
  </data>
</odoo>
