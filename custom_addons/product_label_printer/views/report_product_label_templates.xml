<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Action para imprimir etiquetas de producto.template -->
    <record id="action_report_product_label" model="ir.actions.report">
      <field name="name">Etiquetas de Producto</field>
      <field name="model">product.template</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">product_label_printer.report_product_label</field>
      <field name="report_file">product_label_printer.report_product_label</field>
      <field name="binding_model_id" ref="product.model_product_template"/>
      <field name="binding_type">report</field>
    </record>

    <!-- Plantilla QWeb para etiquetas 2×2 cm con barras Code128 -->
    <template id="report_product_label">
      <t t-call="web.external_layout">
        <t t-foreach="docs" t-as="template">
          <!-- Determinar el código: del template o de la primera variante -->
          <t t-set="code" t-value="template.barcode or
                                    (template.product_variant_ids and
                                     template.product_variant_ids[0].barcode) or ''"/>
          <div style="width:2cm;
                      height:2cm;
                      display:inline-block;
                      margin:1mm;
                      border:1px solid #000;
                      text-align:center;
                      padding:2px;
                      page-break-inside:avoid;">
            <t t-if="code">
              <!-- Widget QWeb de código de barras -->
              <span t-field="code"
                    t-field-options="{'widget':'barcode',
                                     'barcode_type':'Code128',
                                     'width':150,
                                     'height':50}"/>
              <!-- Número debajo -->
              <div style="font-size:6px;
                          line-height:1em;
                          margin-top:2px;">
                <t t-esc="code"/>
              </div>
            </t>
          </div>
        </t>
      </t>
    </template>
  </data>
</odoo>