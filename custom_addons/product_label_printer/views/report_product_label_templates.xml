<!-- product_label_printer/views/report_product_label_templates.xml -->
<odoo>
  <data>
    <!-- Action to print product labels -->
    <report
      id="action_report_product_label"
      model="product.product"
      string="Etiquetas de Producto"
      report_type="qweb-pdf"
      name="product_label_printer.report_product_label"
      file="product_label_printer.report_product_label"
      attachment_use="False"
      binding_model_id="product.model_product_product"
      binding_type="report"
    />
    <!-- QWeb template for labels -->
    <template id="report_product_label">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="product">
          <div class="page"
               style="width:2cm; height:2cm; display:inline-block;
                      margin:1mm; border:1px solid #000; text-align:center;
                      padding:2px; page-break-inside:avoid;">
            <!-- Barcode -->
            <div style="margin-bottom:1px;">
              <span t-field="product.barcode"
                    t-field-options="{'widget':'barcode', 'barcode_type':'EAN13', 'height':40}"/>
            </div>
            <!-- Barcode number -->
            <div style="font-size:8px; line-height:1em;">
              <t t-esc="product.barcode"/>
            </div>
          </div>
        </t>
      </t>
    </template>
  </data>
</odoo>
