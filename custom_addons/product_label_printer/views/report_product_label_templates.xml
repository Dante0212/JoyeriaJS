<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Action para imprimir etiquetas de producto -->
    <record id="action_report_product_label" model="ir.actions.report">
      <field name="name">Etiquetas de Producto</field>
      <field name="model">product.template</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">product_label_printer.report_product_label</field>
      <field name="report_file">product_label_printer.report_product_label</field>
      <field name="binding_model_id" ref="product.model_product_product"/>
      <field name="binding_type">report</field>
    </record>
    <!-- Plantilla QWeb para etiquetas -->
    <template id="report_product_label">
      <t t-call="web.html_container">
        <t t-foreach="docs.exists()" t-as="product">
          <div class="page"
               style="width:2cm; height:2cm; display:inline-block;
                      margin:1mm; border:1px solid #000; text-align:center;
                      padding:2px; page-break-inside:avoid;">
            <t t-if="product.barcode">
            <div style="margin-bottom:1px;">
              <span t-field="product.barcode"
                    t-field-options="{'widget':'barcode', 'barcode_type':'EAN13', 'height':40}"/>
            </div>
            <div style="font-size:8px; line-height:1em;">
              <t t-esc="product.barcode"/>
            </div>
          </t>
            <div style="font-size:8px; line-height:1em;">
              <t t-esc="product.barcode"/>
            </div>
          </div>
        </t>
      </t>
    </template>
  </data>
</odoo>
