<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Acción para imprimir etiquetas de producto.template -->
    <record id="action_report_product_label" model="ir.actions.report">
      <field name="name">Etiquetas de Producto</field>
      <field name="model">product.template</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">product_label_printer.report_product_label</field>
      <field name="report_file">product_label_printer.report_product_label</field>
      <field name="binding_model_id" ref="product.model_product_template"/>
      <field name="binding_type">report</field>
    </record>

    <!-- Plantilla QWeb para etiquetas 2×2 cm -->
    <template id="report_product_label">
      <t t-call="web.html_container">
        <t t-foreach="docs.exists()" t-as="template">
          <!-- Calcular el código: el barcode del template o de la primera variante -->
          <t t-set="code" t-value="template.barcode or
                                    (template.product_variant_ids and template.product_variant_ids[0].barcode) or ''"/>
          <div class="page"
               style="width:2cm; height:2cm; display:inline-block;
                      margin:1mm; border:1px solid #000; text-align:center;
                      padding:0.1cm; page-break-inside:avoid;">
            <t t-if="code">
              <!-- Imagen de barras en Code128 -->
              <img t-att-src="'/report/barcode?type=code128&amp;value=%s&amp;width=200&amp;height=50' % code"
                   style="max-width:100%; max-height:1cm;"/>
              <!-- Número pequeño debajo -->
              <div style="font-size:6px; line-height:1em; margin-top:2px;">
                <t t-esc="code"/>
              </div>
            </t>
          </div>
        </t>
      </t>
    </template>
  </data>
</odoo>
