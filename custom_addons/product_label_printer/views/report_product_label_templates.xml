<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!-- 1) Acción para imprimir etiquetas 2×2 cm sobre variantes -->
    <record id="action_report_product_label_2x2" model="ir.actions.report">
      <field name="name">Etiquetas 2×2 cm</field>
      <field name="model">product.product</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">product_label_printer.report_product_label_2x2</field>
      <field name="report_file">product_label_printer.report_product_label_2x2</field>
      <field name="binding_model_id" ref="product.model_product_product"/>
      <field name="binding_type">report</field>
    </record>

    <!-- 2) Plantilla QWeb 2×2 cm con <img> -->
    <template id="report_product_label_2x2">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="product">
          <div style="
              width:2cm; height:2cm;
              display:inline-block; margin:1mm;
              border:1px solid #000;
              text-align:center; padding:2px;
              page-break-inside:avoid;
            ">
            <!-- Genera un <img> con la ruta interna de barras -->
            <img t-att-src="
              '/report/barcode?type=Code128&amp;value=%s&amp;width=200&amp;height=60'
              % product.barcode
            "
            style="max-width:100%; max-height:1cm;"/>
            <!-- Número debajo -->
            <div style="font-size:6px; line-height:1em; margin-top:2px;">
              <t t-esc="product.barcode"/>
            </div>
          </div>
        </t>
      </t>
    </template>

  </data>
</odoo>
