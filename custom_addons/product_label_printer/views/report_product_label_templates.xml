<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Acción para imprimir etiquetas de producto (template) -->
    <record id="action_report_product_label" model="ir.actions.report">
      <field name="name">Etiquetas de Producto</field>
      <field name="model">product.template</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">product_label_printer.report_product_label</field>
      <field name="report_file">product_label_printer.report_product_label</field>
      <field name="binding_model_id" ref="product.model_product_template"/>
      <field name="binding_type">report</field>
    </record>

    <!-- Plantilla QWeb para etiquetas de producto.template -->
    <template id="report_product_label">
      <t t-call="web.html_container">
        <t t-foreach="docs.exists()" t-as="template">
          <t t-set="code">
            <!-- toma barcode de template o si está vacío, de la primera variante -->
            <t t-esc="template.barcode or (template.product_variant_ids and template.product_variant_ids[0].barcode) or ''"/>
          </t>
          <div class="page"
               style="width:2cm;height:2cm;display:inline-block;
                      margin:1mm;border:1px solid #000;text-align:center;
                      padding:2px;page-break-inside:avoid;">
            <t t-if="code">
              <!-- Imagen de código de barras -->
              <img t-att-src="'/web/binary/barcode?barcode=%s&barcode_type=EAN13&width=150&height=60' % code"
                   style="max-width:100%;"/>
              <!-- Número debajo -->
              <div style="font-size:8px;line-height:1em;margin-top:2px;">
                <t t-esc="code"/>
              </div>
            </t>
          </div>
        </t>
      </t>
    </template>
  </data>
</odoo>
