<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Acción para etiquetas 2×2 cm -->
    <record id="action_report_product_label_2x2" model="ir.actions.report">
      <field name="name">Etiquetas 2×2 cm</field>
      <field name="model">product.template</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">product_label_printer.report_product_label_2x2</field>
      <field name="report_file">product_label_printer.report_product_label_2x2</field>
      <field name="binding_model_id" ref="product.model_product_template"/>
      <field name="binding_type">report</field>
    </record>

    <!-- Plantilla QWeb para etiquetas 2×2 cm -->
    <template id="report_product_label_2x2">
      <t t-call="web.html_container">
        <div class="page_container">
          <t t-foreach="docs" t-as="template">
            <div style="
                width:2cm; height:2cm;
                display:inline-block; margin:1mm;
                border:1px solid #000;
                text-align:center; padding:2px;
                page-break-inside:avoid;">
              <!-- Primero intento con el barcode del template -->
              <t t-if="template.barcode">
                <span t-field="template.barcode"
                      t-field-options="{
                        'widget': 'barcode',
                        'barcode_type': 'Code128',
                        'height': 50
                      }"/>
              </t>
              <!-- Si no tiene, uso el barcode de su primera variante -->
              <t t-elif="template.product_variant_ids">
                <span t-field="template.product_variant_ids[0].barcode"
                      t-field-options="{
                        'widget': 'barcode',
                        'barcode_type': 'Code128',
                        'height': 50
                      }"/>
              </t>
              <!-- Número debajo -->
              <div style="font-size:6px; margin-top:2px; line-height:1em;">
                <t t-esc="template.barcode or
                          (template.product_variant_ids and
                           template.product_variant_ids[0].barcode) or ''"/>
              </div>
            </div>
          </t>
        </div>
      </t>
    </template>
  </data>
</odoo>
