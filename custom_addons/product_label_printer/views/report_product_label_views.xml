<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <record id="action_report_product_label_ring" model="ir.actions.report">
      <field name="name">Etiqueta Anillo 75,95x10,01mm</field>
      <field name="model">product.template</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">product_label_printer.report_product_label_ring</field>
      <field name="report_file">product_label_printer.report_product_label_ring</field>
      <field name="binding_model_id" ref="product.model_product_template"/>
      <field name="binding_type">report</field>
    </record>

    <template id="report_product_label_ring">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="template">
          <t t-set="var" t-value="template.product_variant_ids and template.product_variant_ids[0] or False"/>
          <div style="
              width:75.95mm;
              height:10.01mm;
              box-sizing:border-box;
              margin-bottom:2mm;
              border:1px solid #000;
              font-family:Arial, sans-serif;
              overflow:hidden;
              page-break-inside:avoid;
              display:flex;
              flex-direction:column;
              align-items:center;
              padding:1mm 2mm;
            ">
            <t t-if="var and var.barcode">
              <!-- Referencia interna (arriba, centrada) -->
              <div style="font-size:7px; font-weight:bold; text-align:center;">
                <t t-esc="var.default_code or ''"/>
              </div>

              <!-- Código de barras -->
              <span t-field="var.barcode"
                    t-options="{
                      'widget': 'barcode',
                      'symbology': 'Code128',
                      'img_style': 'width:100%; height:5mm'
                    }"/>

              <!-- Número de barra + precio alineados horizontalmente -->
              <div style="
                  display:flex;
                  justify-content:space-between;
                  align-items:center;
                  width:100%;
                  margin-top:0px;
                ">
                <!-- Número del código de barras -->
                <div style="font-size:6px;">
                  <t t-esc="var.barcode"/>
                </div>

                <!-- Precio a la derecha -->
                <div style="font-size:6.5px; font-weight:bold;">
                  <t t-esc="'$ {:,.0f}'.format(var.lst_price).replace(',', '.')"/>
                </div>
              </div>
            </t>
          </div>
        </t>
      </t>
    </template>

  </data>
</odoo>
