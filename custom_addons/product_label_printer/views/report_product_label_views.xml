<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="action_report_product_label_ring" model="ir.actions.report">
      <field name="name">Etiqueta Anillo 75,95x10,01mm</field>
      <field name="model">product.template</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">product_label_printer.report_product_label_ring</field>
      <field name="report_file">product_label_printer.report_product_label_ring</field>
      <field name="binding_model_id" ref="product.model_product_template"/>
      <field name="binding_type">report</field>
    </record>

    <template id="report_product_label_ring">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="template">
          <t t-set="var" t-value="template.product_variant_ids and template.product_variant_ids[0] or False"/>
          <div style="
              width:75.95mm;
              height:10.01mm;
              box-sizing:border-box;
              display:block;
              margin-bottom:2mm;
              border:1px solid #000;
              page-break-inside:avoid;
              font-family:Arial, sans-serif;
              overflow:hidden;
            ">
            <div style="
                display:flex;
                flex-direction:column;
                justify-content:center;
                align-items:center;
                height:100%;
                padding:0 1mm;
              ">
              <t t-if="var and var.barcode">
                <!-- Referencia interna (centrada) -->
                <div style="font-size:8px; font-weight:bold; text-align:center;">
                  <t t-esc="var.default_code or ''"/>
                </div>

                <!-- Código de barras -->
                <span t-field="var.barcode"
                      t-options="{
                        'widget': 'barcode',
                        'symbology': 'Code128',
                        'img_style': 'width:100%; height:5mm'
                      }"/>

                <!-- Número de código de barra (centrado) -->
                <div style="font-size:6px; text-align:center;">
                  <t t-esc="var.barcode"/>
                </div>

                <!-- Precio (centrado) -->
                <div style="
                  font-size:6px;
                  line-height:1em;
                  position:absolute;
                  bottom:2px;
                  width:100%;
                  text-align:center;
                ">
                $<t t-esc="template.list_price"/>
              </t>
            </div>
          </div>
        </t>
      </t>
    </template>
  </data>
</odoo>
