<odoo>
    <report
        id="action_report_rma_pos"
        model="rma.pos.report.wizard"
        string="Reporte RMA + POS"
        report_type="qweb-pdf"
        name="pos_qr_auth.report_rma_pos_template"
        file="pos_qr_auth.report_rma_pos_template"
        attachment_use="False"
    />
    <template id="report_rma_pos_template">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Reporte RMA + POS</h2>
                <p>Desde: <t t-esc="data['date_start']"/> Hasta: <t t-esc="data['date_end']"/></p>
                <table class="table table-sm">
                    <thead>
                        <tr><th>Tipo</th><th>Referencia</th><th>Fecha</th><th>Cliente</th><th>Total</th></tr>
                    </thead>
                    <tbody>
                        <t t-foreach="rmas" t-as="r">
                            <tr>
                                <td>RMA</td>
                                <td><t t-esc="r.name"/></td>
                                <td><t t-esc="r.fecha_retiro"/></td>
                                <td><t t-esc="r.cliente_id.name"/></td>
                                <td><t t-esc="r.amount_total"/></td>
                            </tr>
                        </t>
                        <t t-foreach="poses" t-as="p">
                            <tr>
                                <td>POS</td>
                                <td><t t-esc="p.name"/></td>
                                <td><t t-esc="p.date_order"/></td>
                                <td><t t-esc="p.partner_id.name"/></td>
                                <td><t t-esc="p.amount_total"/></td>
                            </tr>
                        </t>
                    </tbody>
                    <tfoot>
                        <tr><td colspan="4"><strong>Total RMA</strong></td><td><t t-esc="totals['rma']"/></td></tr>
                        <tr><td colspan="4"><strong>Total POS</strong></td><td><t t-esc="totals['pos']"/></td></tr>
                        <tr><td colspan="4"><strong>Gran Total</strong></td><td><t t-esc="totals['grand']"/></td></tr>
                    </tfoot>
                </table>
            </div>
        </t>
    </template>
</odoo>