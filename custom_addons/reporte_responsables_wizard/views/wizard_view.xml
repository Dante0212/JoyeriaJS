<odoo>
    <record id="view_reporte_responsables_wizard_form" model="ir.ui.view">
        <field name="name">reporte.responsables.wizard.form</field>
        <field name="model">reporte.responsables.wizard</field>
        <field name="arch" type="xml">
            <form string="Órdenes de reparaciones por responsable dinámico">
                <group>
                    <field name="responsable_id"/>
                    <field name="fecha_inicio"/>
                    <field name="fecha_fin"/>
                </group>
                <footer>
                    <button name="imprimir_reporte" string="Imprimir PDF" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
