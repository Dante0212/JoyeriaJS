<odoo>
  <!-- 1. Crea un menú raíz “Reportes” bajo Punto de Venta -->
  <record id="menu_pos_reports_root" model="ir.ui.menu">
    <field name="name">Reportes</field>
    <field name="parent_id" ref="point_of_sale.menu_point_of_sale_root"/>
    <field name="sequence">100</field>
  </record>

  <!-- 2. Define la acción que lanza tu reporte -->
  <record id="action_report_pos_jr" model="ir.actions.act_window">
    <field name="name">Ventas POS & RMA</field>
    <field name="res_model">pos.reparaciones.report.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

  <!-- 3. Crea el menú que llama a esa acción -->
  <menuitem 
    id="menu_pos_jr_report"
    name="POS & RMA"
    parent="menu_pos_reports_root"
    action="action_report_pos_jr"
    sequence="1"/>
</odoo>
