<odoo>
  <template id="template_monthly_rma_pos">
    <t t-call="web.external_layout">
      <div class="page">
        <h1 style="text-align:center;">Reporte Mensual RMA + POS</h1>
        <p>Periodo: <strong><t t-esc="date_start"/> a <t t-esc="date_stop"/></strong></p>
        <table class="table table-sm">
          <thead>
            <tr>
              <th>Fecha</th>
              <th>Total RMA</th>
              <th>Total POS</th>
              <th>Gran Total</th>
            </tr>
          </thead>
          <tbody>
            <t t-foreach="groups" t-as="grp">
              <tr>
                <td><t t-esc="grp['date']"/></td>
                <td><t t-esc="grp['rma']"/></td>
                <td><t t-esc="grp['pos']"/></td>
                <td><t t-esc="grp['rma'] + grp['pos']"/></td>
              </tr>
            </t>
          </tbody>
        </table>
      </div>
    </t>
  </template>
</odoo>
