<odoo>
  <template id="stock_transfer_charge_report_template">
    <t t-call="web.external_layout">
      <div class="page">
        <h2 style="text-align:center;">Cargos entre Locales por Traspaso</h2>
        <table class="table table-sm table-bordered mt16">
          <thead>
            <tr>
              <th>Origen</th>
              <th>Destino</th>
              <th class="text-right">Total (â‚¬)</th>
            </tr>
          </thead>
          <tbody>
            <t t-foreach="lines" t-as="l">
              <tr>
                <td><t t-esc="l.origin"/></td>
                <td><t t-esc="l.destination"/></td>
                <td class="text-right">
                  <t t-esc="formatLang(l.total, currency_obj=company.currency_id)"/>
                </td>
              </tr>
            </t>
          </tbody>
        </table>
      </div>
    </t>
  </template>
</odoo>
